#version 400

#pragma include "Includes/Configuration.include"

uniform vec3 cameraPosition;
uniform sampler2D positionTex;

out vec4 result;

void main() {
    result = vec4(0);

    ivec2 coord = ivec2(gl_FragCoord.xy);
    vec3 wsPos = texelFetch(positionTex, coord, 0).xyz;
    float dist = distance(wsPos, cameraPosition);

    if (dist > SKYBOX_BEGIN) {
        result = vec4(1);
    }

}